    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "serialize-javascript": "^6.0.1",
    "ts-jest": "^29.2.6",
    "typescript": "^5.5.4",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "tsup": "^8.3.6"
