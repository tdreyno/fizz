{
  "name": "@tdreyno/fizz",
  "version": "5.0.0",
  "repository": "https://github.com/tdreyno/fizz.git",
  "funding": "https://github.com/sponsors/tdreyno",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 16"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "lint": "eslint -c .eslintrc.cjs --ext .ts --ext .tsx src",
    "build": "rm -rf dist && tsc --project tsconfig.json",
    "build:incremental": "tsc --incremental --project tsconfig.json",
    "test": "jest --runInBand",
    "test:npm": "bash bin/test-npm-version",
    "version": "npm run build",
    "coverage": "jest --runInBand --coverage --coverageDirectory '../coverage'",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "prepare": "husky install",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@commitlint/prompt": "^17.6.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/serialize-javascript": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.2",
    "serialize-javascript": "^6.0.1",
    "svelte": "^3.57.0",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^5.0.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "svelte": "^3.55"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint -c .eslintrc.cjs --ext .ts --ext .tsx src --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "18.15.0",
    "npm": "8.17.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
