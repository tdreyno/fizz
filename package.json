{
  "name": "@tdreyno/fizz",
  "version": "3.1.0",
  "repository": "https://github.com/tdreyno/fizz.git",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 14"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "lint": "eslint -c .eslintrc.cjs --ext .ts --ext .tsx src",
    "build": "rm -rf dist && tsc --project tsconfig.json",
    "build:incremental": "tsc --incremental --project tsconfig.json",
    "test": "jest --runInBand",
    "test:npm": "bash bin/test-npm-version",
    "version": "yarn run build",
    "coverage": "jest --runInBand --coverage --coverageDirectory '../coverage'",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/prompt": "^17.1.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^18.7.23",
    "@types/serialize-javascript": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.36.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "serialize-javascript": "^6.0.0",
    "svelte": "^3.52",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.10.7",
    "ts-jest": "^27.0.7",
    "typescript": "^4.8.4"
  },
  "dependencies": {},
  "peerDependencies": {
    "svelte": "^3.52"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint -c .eslintrc.cjs --ext .ts --ext .tsx src --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "16.13.1",
    "yarn": "1.22.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
