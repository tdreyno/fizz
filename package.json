{
  "name": "@tdreyno/fizz",
  "version": "5.2.0",
  "repository": "https://github.com/tdreyno/fizz.git",
  "funding": "https://github.com/sponsors/tdreyno",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 16"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "lint": "eslint",
    "build": "rm -rf dist && tsc --project tsconfig.json",
    "build:incremental": "tsc --incremental --project tsconfig.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:ci": "jest --runInBand",
    "test:npm": "bash bin/test-npm-version",
    "version": "npm run build",
    "coverage": "jest --runInBand --coverage --coverageDirectory '../coverage'",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "prepare": "husky install",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/prompt": "^19.3.0",
    "@eslint/js": "^9.4.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/svelte": "^5.1.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.12.2",
    "@types/serialize-javascript": "^5.0.4",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.5",
    "semantic-release": "^24.0.0",
    "serialize-javascript": "^6.0.1",
    "svelte": "^4.2.17",
    "svelte-jester": "^3.0.0",
    "svelte-preprocess": "^5.1.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3",
    "typescript-eslint": "^8.0.0-alpha.24"
  },
  "peerDependencies": {
    "svelte": "^4.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
