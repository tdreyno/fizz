{
  "name": "fizz",
  "private": true,
  "scripts": {
    "clean": "turbo clean",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:npm": "turbo run test:npm",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "turbo run build && turbo run lint && turbo run build && turbo run test:ci && turbo run test:npm && changeset version && changeset publish"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/react-example": "*",
    "@repo/tsconfig": "*",
    "@tdreyno/fizz": "*",
    "@tdreyno/fizz-react": "*",
    "@tdreyno/fizz-svelte": "*",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.29.7"
  }
}
